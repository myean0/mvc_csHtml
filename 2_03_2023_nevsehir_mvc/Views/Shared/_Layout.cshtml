<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nevşehir</title>
  <link rel="stylesheet" href="~/bootstrap.css">
  <link rel="stylesheet" href="~/style.css">
  <link rel="stylesheet" href="~/Font_Awesome_6-4-0/css/all.css">
  <link rel="shortcut icon" type="image" href="~/img/stonepickaxe.ico">
</head>

<body>

  @using _2_03_2023_nevsehir_mvc.ViewModels
  @model SayfaBilgiViewModel

  <section class="arkaplan">

    <div class="container-fluid p-0">
      <nav class="navbar navbar-expand-lg bg-dark navbar-dark" data-bs-theme="dark">
        <div class="container-fluid">
          <a href="/"><img id="logo" src="~/img/logo.png" alt=""></a>
          <a class="navbar-brand" href="/Home/Index">Ana Sayfa</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

              <li class="nav-item dropdown mt-1">
                <a class="nav-link dropdown-toggle text-info" href="#" role="button" data-bs-toggle="dropdown"
                  aria-expanded="false">
                  Gezilecek Yerler
                </a>
                <ul class="dropdown-menu">

                  @{
                    int ii = 0;
                  }
                  @foreach (var item in @Model.Sehirler)
                  {
                    <li><a class='dropdown-item
                    @(ii==0 ? "text-primary"
                    : ii==1 ? "text-warning" 
                    : ii==2 ? "text-danger" 
                    : ii==3 ? "text-success" 
                    : ii=-1)' href="/Home/GezilecekYerler/@item.Id">@item.Sehir</a></li>
                    ii++;
                  }

                </ul>
              </li>

              @{
                int i = 0;
              }
              @foreach (var item in Model.Sehirler)
              {
                <li class="nav-item dropdown mt-1">
                  <a class='nav-link dropdown-toggle
                   @(i==0 ? "text-primary"
                   : i==1 ? "text-warning" 
                   : i==2 ? "text-danger" 
                   : i==3 ? "text-success" 
                   : i=-1)' href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @item.Sehir
                  </a>
                  <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Coğrafik Konumu</a></li>
                    <li><a class="dropdown-item" href="#">Tarihi Yerleri</a></li>
                    <li>
                      <hr class="dropdown-divider">
                    </li>
                    <li><a class="dropdown-item" href="/Home/SayfaHakkinda/@item.Id">Hakkında</a></li>
                  </ul>
                </li>

                i++;
              }

              @* <li class="nav-item dropdown mt-1">
                <a class="nav-link dropdown-toggle text-info" href="/Home/Urgup" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Ürgüp
                </a>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Coğrafik Konumu</a></li>
                <li><a class="dropdown-item" href="#">Tarihi Yerleri</a></li>
                <li>
                <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="#">Hakkında</a></li>
                </ul>
                </li>
                <li class="nav-item dropdown mt-1">
                <a class="nav-link dropdown-toggle text-warning" href="/Home/Goreme" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                Göreme
                </a>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Coğrafik Konumu</a></li>
                <li><a class="dropdown-item" href="#">Tarihi Yerleri</a></li>
                <li>
                <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="#">Hakkında</a></li>
                </ul>
                </li>
                <li class="nav-item dropdown mt-1">
                <a class="nav-link dropdown-toggle text-success-emphasis" href="/Home/Urgup" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                Hacıbektaş
                </a>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Coğrafik Konumu</a></li>
                <li><a class="dropdown-item" href="#">Tarihi Yerleri</a></li>
                <li>
                <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="#">Hakkında</a></li>
                </ul>
                </li> *@
            </ul>
            <form class="d-flex" role="search">
              <input class="form-control me-2 border-light" type="search" placeholder="Arama Yapın..."
                aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Ara</button>
            </form>
          </div>
        </div>
      </nav>


    </div>

    <div class="main">
      @RenderBody()
    </div>

    <div class="footer mt-5">
      <div class="card text-center">
        <div class="card-header">Hakkımızda</div>
        <div class="card-body bg-dark">
          <h5 class="card-title"></h5>
          <p class="card-text text-white">© 2016 ~ 2022 Ram Universe. Tüm Hakları Saklıdır.</p>

          <a class="btn btn-dark btn-outline-light" href="/Home/About">
            Hakkımızda Bilgi Edinin</a>
        </div>
      </div>
    </div>


  </section>
  
  <script src="~/bootstrap.bundle.js"></script>
  <script src="~/Font_Awesome_6-4-0/js/all.js"></script>

  <script src="~/ckeditor/ckeditor.js"></script>
  <script>
    $(document).ready(function () {
      CKEDITOR.replace('textareaContent', {
        height: 400,
        filebrowserUploadUrl: '/ckeditor/upload_ckeditor',
        filebrowserBrowseUrl: '/ckeditor/filebrowse'
      });
    });
  </script>
</body>

</html>