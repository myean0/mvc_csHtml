@{
    Layout = "_AdminLayout";
}

@model SayfaBilgiViewModel

<form action="" method="POST" enctype="multipart/form-data">

    <div class="col col-10">

        <div class="row">

            <div class="mb-1 col col-6">

                <label class="form-label">Gezilecek Yer Açıklama</label>
                <textarea name="gYerAciklama" id="textareaContent" cols="30" rows="10"></textarea>

            </div>

            <div class="mb-1 col col-3">

                <label class="form-label">Gezilecek Yer Başlık</label>
                <input type="text" class="form-control" name="gYerAd" placeholder="Bir Başlık Giriniz.">

            </div>

        </div>

        <div class="row mt-3">

            <div class="col col-6">

                <div class="mb-3">
                    <label for="formFile" class="form-label">Resim Seçiniz</label>
                    <input class="form-control" type="file" id="formFile" name="resimr" multiple>
                </div>

                <div class="mb-3">
                    <label for="formFile" class="form-label">Çoklu Resim Seçiniz</label>
                    <input class="form-control" type="file" id="formFile" name="resimler" multiple>
                </div>

            </div>

            <div class="col col-3">

                <div class="mb-3">

                    <label for="formFile" class="form-label">Şehir Seçiniz</label>
                    <select name="sehirId" class="form-select form-select-sm mt-1" aria-label=".form-select-sm example">
                        @foreach (var item in Model.Sehirler)
                        {
                            <option value="@item.Id">@item.Sehir</option>
                        }
                    </select>

                </div>

            </div>

        </div>

    </div>

    <div class="row">

        <input class="btn btn-outline-primary mt-3 col col-2 mx-5 mb-3" type="submit" value="Gezilecek Yer Ekle">

    </div>

</form>