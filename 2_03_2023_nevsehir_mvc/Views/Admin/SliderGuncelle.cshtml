@{
    Layout = "_AdminLayout";
}

@model sliderTable

<form  method="POST" enctype="multipart/form-data">

    <input type="hidden" name="Id" value="@Model.Id">

    <div class="row">

        <div class="mb-1 col col-3">

            <label class="form-label">Slider Başlık</label>
            <input type="text" class="form-control" name="SliderBaslik" value="@Model.SliderBaslik" required="required"
                autofocus="autofocus">

        </div>

        <div class="mb-1 col col-4">

            <label class="form-label">Slider Açıklama</label>
            <input type="text" class="form-control" name="SliderAciklama" value="@Model.SliderAciklama"
                required="required" autofocus="autofocus">

        </div>

    </div>

    <div class="row">

        <div class="col col-3">

            <div class="mb-3">
                <label class="form-label">Resim</label>
                <img src="~/img/@Model.SliderResim" class="img-fluid ms-1">
            </div>

        </div>

    </div>

    <div class="row">

        <div class="col col-3 ms-1">
            <input type="hidden" name="SliderResim" value="@Model.SliderResim">
            <input class="form-control" type="file" id="formFile" name="resim">
        </div>

    </div>

    <div class="row">

        <input class="btn btn-outline-success mt-3 col col-2 mx-3" type="submit" value="Slider Güncelle">
        <a class="btn btn-outline-warning mt-3" style="width: 100px;" href="/Admin/SliderListele">Geri Dön</a>

    </div>

</form>