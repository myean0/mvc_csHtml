@model SayfaBilgiViewModel

<input type="hidden" name="Id" value="@ViewBag.Id">

<div class="col-lg-6 col-md-8 mx-auto mt-5 p-4 mb-5">
    @* @foreach (var item in Model.Sehirler)
        { *@
    <h1 class="fw-light text-info text-center">@Model.sehirTableKayit.Sehir</h1>
    <span class="lead text-white text-center">@Html.Raw(Model.sehirTableKayit.SehirAciklama)</span>
    @* break;
        } *@
</div>

<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @{
            int i = 0;
        }
        @foreach (var item in Model.Sliderlar)
        {

            <div class='carousel-item @(i<1 ? "active" : " ")' data-bs-interval="4000">
                <img src="~/img/@item.SliderResim" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block bg-dark rounded" style="--bs-bg-opacity: .5;">
                    <h5>@item.SliderBaslik</h5>
                    <p>@item.SliderAciklama</p>
                </div>
            </div>


            i++;
        }
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>